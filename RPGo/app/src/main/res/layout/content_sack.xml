<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mental.rpgo.sack"
    tools:showIn="@layout/activity_sack">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pickL"
        android:layout_marginTop="17dp"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pick_lock"
            android:id="@+id/imPick" />

        <TextView
            android:text="@string/pick_lock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pickName"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/knifeL"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        android:layout_below="@+id/pickL"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/knife"
            android:id="@+id/imKn"
            android:background="@android:color/white" />

        <TextView
            android:text="@string/knife"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/knifeName"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textAlignment="center" />
    </LinearLayout>
</RelativeLayout>
