<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mental.rpgo.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="@string/content_main_TextView_Tlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tlog"
        android:textSize="36sp"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usr"
        android:hint="@string/username_email"
        android:layout_below="@+id/Tlog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:text="@string/TV_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV_pwdforgot"
        android:textSize="16sp"
        android:layout_below="@+id/pwd"
        android:layout_alignStart="@+id/pwd"
        android:layout_marginTop="21dp"
        android:clickable="true"
        android:textColor="?attr/editTextColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_main_btnLogin"
        android:id="@+id/btnLogIn"
        android:layout_marginEnd="40dp"
        android:layout_alignBaseline="@+id/btnSignUp"
        android:layout_alignBottom="@+id/btnSignUp"
        android:layout_toStartOf="@+id/btnSignUp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwd"
        android:hint="@string/password"
        android:layout_below="@+id/usr"
        android:layout_alignStart="@+id/usr"
        android:text="" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_main_btnSignUp"
        android:id="@+id/btnSignUp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/TV_pwdforgot"
        android:layout_alignEnd="@+id/pwd" />

</RelativeLayout>
