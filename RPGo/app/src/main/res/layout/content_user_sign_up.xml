<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#008080"
    tools:context="com.example.mental.rpgo.SignUp"
    tools:showIn="@layout/activity_user_sign_up">

    <TextView
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TV_register"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:paddingBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password :"
        android:id="@+id/TV_password"
        android:layout_marginTop="27dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/TV_username"
        android:layout_alignStart="@+id/TV_username"
        android:layout_alignEnd="@+id/TV_username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Strength: "
        android:id="@+id/TV_passStr"
        android:paddingRight="20dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/TV_password"
        android:layout_alignStart="@+id/TV_password"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Retype Password :"
        android:id="@+id/TV_retypePass"
        android:textColor="@android:color/white"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/TV_passStr"
        android:layout_alignStart="@+id/TV_passStr"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/TV_str"
        android:text="Not Inserted"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/TV_passStr"
        android:layout_alignBottom="@+id/TV_passStr"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/TV_passStr"
        android:textStyle="normal|italic"
        android:textAllCaps="false" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/match"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_below="@+id/secP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="#000000"
        android:id="@+id/btnDone"
        android:clickable="true"
        android:enabled="false"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/ET_email"
        android:layout_below="@+id/match"
        android:hint="E-mail"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_toEndOf="@+id/TV_register"
        android:layout_alignStart="@+id/secP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV_email"
        android:text="E-mail :"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/ET_email"
        android:layout_alignBottom="@+id/ET_email"
        android:layout_alignStart="@+id/TV_retypePass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username :"
        android:id="@+id/TV_username"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/TV_register"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/userN"
        android:hint="Username"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:inputType="textPersonName"
        android:textColorLink="@android:color/black"
        android:layout_alignBaseline="@+id/TV_username"
        android:layout_alignBottom="@+id/TV_username"
        android:layout_toEndOf="@+id/TV_passStr" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="Password"
        android:textColorLink="?android:attr/textColorPrimaryDisableOnly"
        android:layout_alignBaseline="@+id/TV_password"
        android:layout_alignBottom="@+id/TV_password"
        android:layout_toEndOf="@+id/TV_passStr" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/secP"
        android:hint="Password again"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_alignBaseline="@+id/TV_retypePass"
        android:layout_alignBottom="@+id/TV_retypePass"
        android:layout_toEndOf="@+id/TV_passStr" />

</RelativeLayout>
