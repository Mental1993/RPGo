<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_achivements"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mental.rpgo.Achivements"
    android:background="@drawable/bgimage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/achivements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TV_achivementTitle"
            android:textColor="#009A9A"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="26sp"
            android:fontFamily="casual" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingBottom="10dp">

            <TextView
                android:text="@string/achivement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/TV_achivementCat"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/TV_descCat"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:text="@string/descryption" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/time_passed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_timePassed"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textAlignment="viewStart" />

            <TextView
                android:text="@string/incomplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_timePassedStatus"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
